<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidingView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray200"
    tools:context=".ACTIVITY.MainTabActivity"
    android:gravity="bottom"
    app:umanoPanelHeight="0dp"
    app:umanoDragView="@id/dragView"
    app:umanoShadowHeight="0dp"
    app:umanoOverlay="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabs"
        ></FrameLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/amber300"
        android:elevation="1dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:layout_alignParentBottom="true"
        app:tabIndicatorColor="@color/transparent"
        />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/dragView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <View
            android:id="@+id/view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="2dp">
        </View>
        <androidx.appcompat.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/amber300"
            >
            <ImageButton
                android:id="@+id/close_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_close_24"
                android:background="@color/transparent"
                ></ImageButton>
            <TextView
                android:id="@+id/toolbar_title"
                android:text="게시물 만들기"
                android:fontFamily="@font/bm_jua_ttf"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
            <Button
                android:id="@+id/posting_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray500"
                android:text="게시"
                android:layout_gravity ="right"
                android:fontFamily="@font/bm_jua_ttf"
                android:background="@color/transparent"
                ></Button>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_margin="16dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유저이름"
                android:fontFamily="@font/bm_dohyeon_ttf"
                android:textColor="@color/black"
                ></TextView>
            <EditText
                android:id="@+id/content_edt"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:hint="내용을 입력하세요"
                android:fontFamily="@font/bm_dohyeon_ttf"
                android:gravity="top"
                android:focusable="true"
                android:inputType="textMultiLine"
                >
                <requestFocus />
            </EditText>
        </LinearLayout>
    </RelativeLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>